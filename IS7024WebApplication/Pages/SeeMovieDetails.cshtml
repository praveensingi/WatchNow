@page
@model IS7024WebApplication.Pages.SeeMovieDetailsModel
@{
    ViewData["Title"] = "Movie Details";
    var movie = TempData.Get<Movie>("Movie");
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Movie Details</title>
    </head>


    <body id="movieResultBody">

    @if (movie.Response != null)
    {
        <div class="container-fluid movieResult">

            <div class="row">
                    <div class="col-4">
                        <div class="card-container mx-auto">

                            <div class="card card-front">
                                <img class="card-img-top" src="@movie.Poster" alt="Movie Poster">
                                <div class="card-body">
                                    <h6>@movie.Title (@movie.Year)</h6>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <span class="card-front-text">      
                                        IMDB @movie.ImdbRating / @movie.Runtime / @movie.Genre
                                    </span>
                                </div>
                            </div>

                            <div class="card card-back">
                                <div class="card-body bg-dark">
                                    <h2>@movie.Title (@movie.Year)<br><span>Directed by @movie.Director</span></h2>
                                    <div class="rating">
                                        <h2>Rating</h2>
                                        <p>@movie.ImdbRating</p>
                                    </div>

                                    <h5 class="card-title back">Card title</h5>
                                    <p class="card-text back">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-8">
                        <h4>@movie.Title (@movie.Year)</h4>
                        <h6>IMDB Rating</h6>
                        <p>@movie.ImdbRating</p>
                        <h6>Plot</h6>
                        <p>@movie.Plot</p>
                        <h6>Director</h6>
                        <p>@movie.Director</p>
                        <h6>Cast Members</h6>
                        <p>@movie.Actors</p>
                        <h6>Writer</h6>
                        <p>@movie.Writer</p>
                        <h6>Genre</h6>
                        <p>@movie.Genre</p>
                        <h6>Runtime</h6>
                        <p>@movie.Runtime</p>
                        <h6>Awards</h6>
                        <p>@movie.Awards</p>
                        <h6>Box Office</h6>
                        <p>@movie.BoxOffice</p>
                    </div>
            </div>

           @* testing*@
            @*<div class="row">
                <div class="col-12">
                    <div class="card-container rollUpCard">
                       <div class="poster">
                            <img src="@movie.Poster" alt="Movie Poster">
                       </div>
                       <div class="details">
                            <h2>@movie.Title (@movie.Year)<br><span>Directed by @movie.Director</span></h2>
                       
                            <div class="rating">
                                <h2>Rating</h2>
                                <p>@movie.ImdbRating</p>
                            </div>
                            <div class="tags">
                                <span class="genre">Genre</span>
                                <p>@movie.Genre</p>
                            </div>
                            <div class="info">
                                <p>@movie.Plot</p>
                            </div>
                            <div class="star">
                                <h4>Cast</h4>
                                <p>@movie.Actors</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>*@

        </div>
    }
    else {
        <h3>Sorry! We could not find the movie you searched for.</h3>
    }

    </body>
</html>