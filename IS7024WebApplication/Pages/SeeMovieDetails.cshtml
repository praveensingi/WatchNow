@page
@model IS7024WebApplication.Pages.SeeMovieDetailsModel
@{
    ViewData["Title"] = "Movie Details";
    var movie = TempData.Get<Movie>("Movie");
}
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Movie Details</title>
    </head>


    <body id="movieResultBody">

    @if (movie.Response != null)
    {
        <div class="container-fluid movieResult">

            <div class="row">
                <div class="col-4">
                    <div class="card-container mx-auto">

                        <div class="card card-front">
                            <img class="card-img-top" src="@movie.Poster" alt="Movie Poster for @movie.Title">
                            <div class="card-body">
                                <h6>@movie.Title (@movie.releaseYear)</h6>
                                <span class="card-front-text">      
                                    @movie.Rated / @movie.Runtime / @movie.Genre
                                </span>
                            </div>
                        </div>

                        <div class="card card-back">
                            <div class="card-body">
                                <h3 class="card-title back">@movie.Title (@movie.releaseYear)</h3>
                            <hr />
                                <div class="Rating">
                                    <span class="rating-header"><h5>IMDB Rating</h5></span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <span class="rating-value">
                                        @movie.ImdbRating
                                    </span>
                                </div>
                                <br>
                                <div class="Plot">
                                <span class="plot"><h5>Plot</h5></span>
                                    <p>@movie.Plot</p>
                                </div>
                                <div class="Cast">
                                <span class="cast"><h5>Cast</h5></span>
                                    <p>@movie.Actors</p>
                                </div>    
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-8">
                    <h4>@movie.Title (@movie.releaseYear)</h4>
                    <h6>Director</h6>
                    <p>@movie.Director</p>
                    <h6>Writer</h6>
                    <p>@movie.Writer</p>
                    <h6>Awards</h6>
                    <p>@movie.Awards</p>
                    <h6>Box Office</h6>
                    <p>@movie.BoxOffice</p>
                </div>
            </div>
        </div>
    }
    else {
        <h3>Sorry! We could not find the movie you searched for.</h3>
    }

    </body>
</html>